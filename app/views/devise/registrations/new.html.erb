<div class="form-login">
  <center>
    <h2>Cadastre-se para postar</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { multipart: true }) do |f| %>
      <%= devise_error_messages! %>

      <fieldset>
        <div class="field">
          <%= f.text_field :username, autofocus: true, placeholder: "Nome de usuÃ¡rio" %>
        </div>

        <div class="field">
          <%= f.email_field :email, autofocus: true, placeholder: "Email" %>
        </div>

        <div class="field">
          <%= f.file_field :image, placeholder: "Imagem" %>
        </div>
        
        <div class="field">
          <%= f.password_field :password, autocomplete: "off", placeholder: "Senha" %>
        </div>

        <div class="field">
          <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Repita a senha" %>
        </div>
        
        <div class="actions">
          <%= f.submit "Cadastrar" %>
        </div>
      </fieldset>
    <% end %>
  </center>
</div>