<div class="form-login">
  <center>
    <h2>Entrar</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <fieldset>    
        <div class="field">
          <%= f.email_field :email, autofocus: true, placeholder: "Seu Email" %>
        </div>

        <div class="field">
          <%= f.password_field :password, autocomplete: "off", placeholder: "Sua Senha" %>
        </div>

        <div class="actions">
          <%= f.submit "Entrar" %>
        </div>
      </fieldset>
    <% end %>
  </center>
</div>